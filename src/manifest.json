{
  "name": "Facebook™ Disconnect",
  "short_name": "ifdisconnect",
  "description": "Facebook™ Disconnect is an efficient firewall to disconnect third-party websites from accessing to your Facebook.",
  "author": "Morni Colhkher",
  "version": "0.1.3",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs",
    "background",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "web_accessible_resources": [],
  "browser_action": {
    "default_icon": "data/icons/16.png"
  },
  "background": {
    "page": "lib/chrome/background.html"
  },
  "homepage_url": "http://mybrowseraddon.com/facebook-disconnect.html",
  "icons": {
    "16": "data/icons/16.png",
    "19": "data/icons/19.png",
    "38": "data/icons/38.png",
    "48": "data/icons/48.png",
    "128": "data/icons/128.png"
  }
}
